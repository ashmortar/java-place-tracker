{{#partial "content"}}

    {{#if editPlace}}
        <h1>Edit this Post!</h1>
        <form action="/places/{{editPlace.id}}/update" method="post">
            <label for="name">Place Name</label>
            <input id="name" name="name" type="text" value="{{editPlace.name}}">

            <label for="location">Where was it?</label>
            <input id="location" name="location" type="text" value="{{editPlace.location}}">

            <label for="notes">What did you think about it?</label>
            <input id="notes" name="notes" type="text" value="{{editPlace.notes}}">
    {{else}}
            <h1>Add a new Place!</h1>

        <form action="/places/new" method="post">
            <label for="name">Place Name</label>
            <input id="name" name="name" type="text">

            <label for="location">Where was it?</label>
            <input id="location" name="location" type="text">

            <label for="notes">What did you think about it?</label>
            <input id="notes" name="notes" type="text">
    {{/if}}
        <button type="submit" class="btn btn-default">Complete</button>
    </form>
{{/partial}}

{{> layout.hbs}}